<!DOCTYPE html>
  <html>
    <head>
      <!--Import Google Icon Font-->
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <!-- Compiled and minified CSS -->
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

      <!-- custom stylesheet -->
      <link href="<%= url('/style.css') %>" rel="stylesheet" type="text/css" />
      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0">

      <title>Jingle</title>
    </head>

    <body>
      <nav class="green lighten-3">
        <div class="nav-wrapper" >
          <div class="container">
            <a href="/" class="brand-logo">jingle</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
              <% if !Helpers.is_logged_in?(session) %>
              <li><a href="/login">Login</a></li>
              <li><a href="/signup">Sign Up</a></li>
              <% else %>
              <li><a href="/logout">Logout</a></li>
              <li><a href="/portfolios"><i class="medium material-icons">person</i></a></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>

        <%= yield %>

        <div class="clearfix"></div>

        <!-- <footer class="page-footer blue-grey lighten-5">
          <div class="footer-copyright">
            <div class="container">
              <span id="footer-text">&copy; 2019 jingle</span>
            </div>
          </div>
        </footer> -->

      <!--JavaScript at end of body for optimized loading-->
      <script type="text/javascript" src="js/materialize.min.js"></script>
    </body>
  </html>
